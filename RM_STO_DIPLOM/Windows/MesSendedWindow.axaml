<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100"
        x:Class="RM_STO_DIPLOM.MesSendedWindow"
        Title="MesSendedWindow"
		Height="100"
		Width="300"
		CanResize="False">
	<Grid
		RowDefinitions="*,*"
		ColumnDefinitions="*,*"
		Margin="10">
		<TextBlock
			Grid.Column="0"
			Grid.Row="0"
			Grid.ColumnSpan="2"
			FontSize="18"
			TextWrapping="Wrap"
			Text="Запрос успешно отправлен"/>
		<Button
			Command="{Binding CloseWin}"
			Grid.Column="1"
			Grid.Row="1"
			Width="50"
			HorizontalAlignment="Center"
			VerticalAlignment="Center">
			<TextBlock
				TextAlignment="Center"
				Text="ОК"/>
		</Button>
	</Grid>
</Window>
